<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mypizzaapp.LoginActivity"
    android:background="@mipmap/background"
    >

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/logo"/>


    <LinearLayout
        android:layout_below="@+id/logo"
        android:layout_margin="10dp"
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="DuplicateIds">

        <EditText
            android:id="@+id/inputName"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/inputName"
        android:layout_margin="15dp"
        android:id="@+id/inputFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputEmail"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/inputFieldEmail"
        android:layout_margin="10dp"
        android:id="@+id/inputFieldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inpuPassword"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/inputFieldPassword"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:onClick="getList"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonstyle"
            android:text="login"
            android:layout_marginLeft="125dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:onClick="getDetails"
            android:background="@drawable/buttonstyle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Register Now"
            android:layout_marginLeft="125dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




</RelativeLayout>